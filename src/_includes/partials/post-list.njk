<ul class="collection__ul">
  {% for post in postslist | reverse %}
    <li>
      <div class="collection__item">
        <div class="collection__head">        <a  href="{{ post.url }}">{{ post.data.title }}</a> |
 <time class="published__date">{{ date | formatDate('MMMM D, YYYY') }}</time>


    <div class="post__excerpt">
    {% if post.data.excerpt %}
      {{ post.data.excerpt | md | safe }}
    {% else %}
      {{ post.page.excerpt | md | safe }}
    {% endif %}
        </div>
    </li>
  {% endfor %}
</ul>